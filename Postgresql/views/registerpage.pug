doctype html
html
    head
        title Register Page
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css")
    body
        .container.mt-5
            .row.justify-content-center
                .col-md-6
                    h1.text-center Register
                    form(method="POST", action="/register")
                        .mb-3
                            label(for="name") Tenant Name
                            input#name.form-control(type="text", name="name", placeholder="Enter tenant name", required=true)
                        .mb-3
                            label(for="email") Admin Email
                            input#email.form-control(type="email", name="email", placeholder="Enter admin email", required=true)
                        .mb-3
                            label(for="password") Password
                            input#password.form-control(type="password", name="password", placeholder="Enter password", required=true)
                        button.btn.btn-primary.w-100(type="submit") Register
                    // Add a back button
                    a.btn.btn-secondary.d-block.mt-3(href="/") Back to Login
